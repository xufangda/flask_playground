    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}"
        },
        {
            "name": "Python: Debug",
            "type": "python",
            "request": "launch",
            // "stopOnEntry": true,
            
            "args": [
                "run",
              ],
            "program": "${file}",
            "debugOptions": [
                "RedirectOutput"
            ]
        },
        
        {
            "name": "Python: Terminal (integrated)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Terminal (external)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "externalTerminal"
        },
        
        {
            "name": "Python: All debug Options",
            "type": "python",
            "request": "launch",
            "pythonPath": "${config:python.pythonPath}",
            "program": "${file}",
            // "module": "module.name",
            // "env": {
            //     "VAR1": "1",
            //     "VAR2": "2"
            // },
            "envFile": "${workspaceFolder}/.env",
            // "args": [
            //     "arg1",
            //     "arg2"
            // ],
            "debugOptions": [
                "RedirectOutput"
            ]
        }
    ]
}